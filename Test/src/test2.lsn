fn Test(x : double) -> int
{
	if (PercentChance(Random))
	{
		return RandomInt(0,99);
	}
	if(StandardNormal() <= CappedNormal(10.0) || RandomDouble(0.0,100.0) < 50.0)
	{
		return 100;
	}
	if(Normal(50.0,10.2) > x)
	{
		return 101;
	}
	if(CappedNormal(50.0,10.2,50.0) < x)
	{
		return 102;
	}
	return 0;
}

