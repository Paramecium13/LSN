fn PathDistance(path:Vector<Point>)-> double
{
	let mut sum = 0.0;
	let mut point = path[0];
	for i in 1..path.Length()-1
	{
		sum = sum + Distance(point,path[i]);
		point = path[i];
	}
	return sum;
}


